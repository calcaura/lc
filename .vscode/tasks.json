{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Current File",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g", // include debug info
                "-std=c++17", // C++ standard
                "${file}", // current open file
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}